<!DOCTYPE html>
<html
    itemscope
    itemtype="http://schema.org/WebPage"
    {{ html_class( 'no-js no-touch is-on-top scroll-smooth bg-brand-noir' ) }}
    {{ site.language_attributes }}
>
	<head>

		<meta charset="{{ site.charset }}">
		<link rel="profile" href="http://gmpg.org/xfn/11">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="format-detection" content="telephone=no">

		{{ function( 'wp_head' ) }}

	</head>

	<body>
		{{- fn( 'wp_body_open' ) -}}

		<div id="page" {{ body_class( 'pt-5 pb-8 prototype:pb-9 text-brand-noir' ) }}>

			{% block header %}
				{{- include( 'header.html.twig', { classes: [] } ) -}}
			{% endblock %}

			{%- block content -%}
				<main class="mt-12 mb-32">
					<div class="container space-y-8">
						<h1 class="title-5">{{- post.title -}}</h1>

						{%- if post.content -%}
							<div class="wysiwyg">{{- post.content -}}</div>
						{%- endif -%}
					</div>

					{{- include( 'blocks/blocks.html.twig', { blocks: post.meta( 'blocks' ), classes: [ 'mt-5 prototype:mt-10 [&>*:first-child]:mt-0 [&>*:first-child]:mb-0' ] } ) -}}

				</main>
			{%- endblock -%}


			{% block footer %}
				{{- include( 'footer.html.twig' ) -}}
			{%- endblock -%}

		</div>


		{{- function( 'wp_footer' ) -}}

		<div id="svg-sprite" style="display: none;">{{- include( 'public/sprite.svg', ignore_missing = true ) -}}</div>

	</body>

</html>
